{
  "name": "my-space-fpa-monorepo",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "pnpm -r --parallel dev",
    "dev:web": "pnpm --filter web dev",
    "dev:services": "pnpm -r --filter \"./services/*\" dev",
    "build": "pnpm -r build",
    "build:web": "pnpm --filter web build",
    "build:services": "pnpm -r --filter \"./services/*\" build",
    "lint": "pnpm -r lint",
    "test": "pnpm -r test",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "db:migrate": "pnpm --filter auth-service prisma migrate dev",
    "db:seed": "pnpm --filter auth-service prisma db seed",
    "db:studio": "pnpm --filter auth-service prisma studio"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "typescript": "^5.4.5"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=9.0.0"
  },
  "packageManager": "pnpm@9.0.0"
}
