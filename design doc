```javascript
PROFILE_COMPLETION = {
  algorithm: {
    base: 0,
    increments: {
      avatar: 10,
      coverImage: 5,
      displayName: 5,
      tagline: 5,
      about: 10,
      skills: { min: 3, perSkill: 2, max: 20 },
      experience: { perItem: 5, max: 15 },
      education: { perItem: 3, max: 9 },
      portfolio: { perItem: 3, max: 15 },
      socialLinks: { perLink: 2, max: 10 },
      verification: { email: 5, phone: 5, identity: 10 }
    },
    bonus: {
      featuredProject: 5,
      certification: 3,
      recommendation: 2,
      badge: 1
    }
  },
  
  tiers: {
    beginner: { range: '0-40', features: ['basic search'] },
    intermediate: { range: '41-70', features: ['priority search', 'more proposals'] },
    advanced: { range: '71-90', features: ['featured profile', 'badge'] },
    expert: { range: '91-100', features: ['verified badge', 'top placement'] }
  },
  
  recommendations: {
    missingItems: ['Add portfolio to increase visibility by 30%'],
    tips: ['Complete your skills to get better job matches'],
    nextSteps: ['Verify your identity to unlock higher limits']
  }
